{% extends 'base.html.twig' %}

{% block title %}Demande d'absence{% endblock %}

{% block body %}
<h4 class="fw-bold py-3 mb-4">Demandes</h4>


<div class="row">
  <!-- Basic with Icons -->
  <div class="col-xxl">
    <div class="card mb-4">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Informations personnels</h5> <small class="text-muted float-end">Merged input group</small>
      </div>
      <div class="card-body">
        {{ form_start(requestForm, {'attr': {'id': 'requestForm'}}) }}
          <div class="row mb-3">
            <label for="defaultSelect" class="col-sm-2 col-form-label">Type de demande</label>
              <div class="col-sm-10">
                <div class="input-group input-group-merge">
                  {{ form_widget(requestForm.type) }}
                </div>
              </div>
          </div>

          <div class="mb-3 row">
            <label for="html5-date-input" class="col-sm-2 col-form-label">Date de début</label>
            <div class="col-sm-10">
                <div class="input-group input-group-merge">
                  {{ form_widget(requestForm.start_date) }}
                </div>
            </div>
          </div>

          <div class="mb-3 row">
            <label for="html5-date-input" class="col-sm-2 col-form-label">Date de fin</label>
            <div class="col-sm-10">
                <div class="input-group input-group-merge">
                  {{ form_widget(requestForm.end_date) }}
                </div>
            </div>
          </div>

          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Demi journée</label>
              <div class="col-sm-10">
                <div class="input-group input-group-merge">
                  {{ form_widget(requestForm.half_day) }}
                </div>
              </div>
          </div>
          <div class="row mb-3">
            <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Commentaire</label>
              <div class="col-sm-10">
                <div class="input-group input-group-merge">
                  {{ form_widget(requestForm.comment) }}
                </div>
              </div>
          </div>

          <div class="row justify-content-end">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>
          </div>

        {{ form_end(requestForm) }}

      </div>
    </div>
  </div>
</div>
{% endblock %}


